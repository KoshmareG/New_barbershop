<h3>Последние комментарии</h3>
<% @contacts.each do |contact| %>
    <div class="card mb-3" style="width: 30rem;">
        <div class="card-header">
            <%= contact.email %>
        </div>
        <div class="card-body">
        <h5 class="card-title"><%= contact.name %></h5>
        <p class="card-text"><%= contact.message %></p>
        </div>
    </div>
<% end %>